		\begin{frame}
		  \frametitle{\textbf{Synaptic Plasticity}}
		    \begin{block}{\textbf{Spiking-Timing Dependent Plasticity(STDP)}}
            \begin{equation}
                \Delta w = \left\{
                            \begin{array}{lr}
                             A_+exp(-\Delta t/\tau_+) \quad if \Delta t\geq 0\\
                            \\
                            -A_-exp(-\Delta t/\tau_-) \quad if \Delta t < 0
                            \end{array}
                            \right.
            \end{equation}
            \end{block}

